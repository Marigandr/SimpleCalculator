<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wukkerteam.simplecalculator.MainActivity"
    tools:showIn="@layout/activity_calculator"
    android:background="@android:color/holo_orange_dark"
    android:padding="0dp">

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:id="@+id/textView"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:textAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
        android:background="@android:color/background_light"
        android:gravity="bottom|right"
        android:textSize="50sp"
        android:layout_height="200dp" />

    <Button
        android:text="7"
        android:id="@+id/btn7"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:onClick="onClickNumber" />

    <Button
        android:text="8"
        android:id="@+id/btn8"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:onClick="onClickNumber" />

    <Button
        android:text="9"
        android:id="@+id/btn9"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/btn6"
        android:layout_alignEnd="@+id/btn6"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:onClick="onClickNumber" />

    <Button
        android:text="1"
        android:id="@+id/btn1"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:onClick="onClickNumber" />

    <Button
        android:text="C"
        android:id="@+id/btnClear"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:onClick="onClickClear" />

    <Button
        android:text="."
        android:id="@+id/btnDot"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:layout_below="@+id/btn2"
        android:onClick="onClickDot" />

    <Button
        android:text="5"
        android:id="@+id/btn5"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:onClick="onClickNumber" />

    <Button
        android:text="2"
        android:id="@+id/btn2"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:onClick="onClickNumber" />

    <Button
        android:text="0"
        android:id="@+id/btn0"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:onClick="onClickNumber" />

    <Button
        android:text="6"
        android:id="@+id/btn6"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_alignBottom="@+id/btn5"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:layout_below="@+id/btn8"
        android:onClick="onClickNumber" />

    <Button
        android:text="3"
        android:id="@+id/btn3"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:layout_below="@+id/btn5"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:layout_above="@+id/btn0"
        android:onClick="onClickNumber" />

    <Button
        android:text="4"
        android:id="@+id/btn4"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn7"
        android:onClick="onClickNumber" />

    <Button
        android:text="+"
        android:id="@+id/btnPlus"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn6"
        android:layout_alignRight="@+id/btnMinus"
        android:layout_alignEnd="@+id/btnMinus"
        android:layout_height="50dp"
        android:layout_width="80dp"
        android:onClick="onClickOperator" />

    <Button
        android:text="-"
        android:id="@+id/btnMinus"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_below="@+id/btnPlus"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6"
        android:layout_height="50dp"
        android:layout_width="80dp"
        android:onClick="onClickOperator" />

    <Button
        android:text="ร"
        android:id="@+id/btnMult"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_height="50dp"
        android:layout_width="80dp"
        android:layout_below="@+id/btnMinus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickOperator" />

    <Button
        android:text="รท"
        android:id="@+id/btnDiv"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_height="50dp"
        android:layout_width="80dp"
        android:layout_below="@+id/btnMult"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickOperator" />

    <Button
        android:text="%"
        android:id="@+id/btnPerc"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_height="50dp"
        android:layout_width="80dp"
        android:layout_below="@+id/btnDiv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickOperator" />

    <Button
        android:text="="
        android:id="@+id/btnEqual"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:background="#4d4d4d"
        android:layout_width="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnPerc"
        android:layout_height="40dp"
        android:onClick="onClickEqual" />

</RelativeLayout>
